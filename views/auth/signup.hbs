<div class="container-fluid contenedor-custom">
  <div class="row justify-content-center custom-row"> 
    <form action="/signup" method="POST"  class="formulario">
      <div class="form-group">
        <label for="username">Nombre de usuario</label>
        <input type="text" name="username" class="form-control" placeholder="Nombre de usuario" required>
      </div>

      <div class="form-group">
        <label for="exampleInputEmail1">Correo electrónico</label>
        <input type="email" name="email" class="form-control" placeholder="Correo electrónico" required>
      </div>

      <div class="form-group">
        <label for="exampleInputPassword1">Contraseña</label>
        <input id="mypassword" type="password" name="password" class="form-control" placeholder="Contraseña" required>
      </div>

      <div class="form-group">
        <label for="exampleInputPassword1">Confirma contraseña</label>
        <input type="password" name="passwordrepeat" class="form-control" placeholder="Confirma contraseña" required>
      </div>
      
      <input type="submit" class="btn btn-primary" value="Crear cuenta">
    </form>

  </div>
</div>


