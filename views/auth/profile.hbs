<div class="courses-list">
  <h2>{{req.user}}</h2>
  <ul class="list-unstyled">
    {{#each coursesInscrip}}
    <li class="media">
      <div class="card mb-3" style="max-width: 540px;">
        {{#if this}}
        <div class="row no-gutters">
          <div class="col-md-4">
            <img src="{{this.photoURL}}" class="card-img" alt="tech">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{this.description}}</p>
              <p class="card-text">Esta materia te da: {{this.creditos}} créditos</p>
              <p class="card-text"><small class="text-muted">{{this.category}}</small></p>
              <p>{{this.reviews}}</p>
              {{#each this.reviews as |reviewId| }}
                <p>{{reviews.reviewId}}</p>
              {{/each}}
              <button type="button" class="btn btn-primary" data-toggle="modal"
                data-target="#exampleModal{{this.id}}">Comentar</button>
            </div>
          </div>
        </div>
        {{else}}
        <div class="alert alert-dark" role="alert">
          <p>El usuario eliminó el curso</p>
        </div>
        {{/if}}
      </div>
    </li>
    <!--Modal-->
    <div class="modal fade" id="exampleModal{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title{{this.title}}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/review/{{this.id}}" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <label for="formGroupExampleInput">Comentario</label>
                <input name="descripcion" type="text" class="form-control" id="formGroupExampleInput"
                  value="{{this.description}}" required>
              </div>
              <div class="form-group">
                <label for="exampleFormControlSelect1">Calificación</label>
                <select name='calificacion' class="form-control" id="exampleFormControlSelect1">
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                </select>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary">Guardar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!--Modal-->
    {{/each}}
  </ul>
  <form action="/create" method="GET">
    <button type="submit" class="btn btn-success">Insertar nuevo curso</button>
  </form>
